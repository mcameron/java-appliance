{
  "tests": [
    {
      "name": "Company News root redirect",
      "uri": "/",
      "inputs": {
        "headers": {
          "User-Agent": "Smolder smoke test library"
        }
      },
      "outcomes": {
        "expect_status_code": 302,
        "response_redirect": "http://localhost/companyNews/"
      }
    },
    {
      "name": "Company News logo",
      "uri": "/static/images/logo.png",
      "method": "get",
      "inputs": {
        "headers": {
          "User-Agent": "Smolder smoke test library"
        }
      },
      "outcomes": {
        "expect_status_code": 200
      }
    },
    {
      "name": "Company News logo redirect",
      "uri": "/images/logo.png",
      "method": "get",
      "inputs": {
        "headers": {
          "User-Agent": "Smolder smoke test library"
        }
      },
      "outcomes": {
        "expect_status_code": 200
      }
    },
    {
      "name": "Send post",
      "uri": "/companyNews/Post.action",
      "method": "post",
      "inputs": {
        "headers": {
          "Host": "localhost",
          "Referer": "http://localhost/companyNews/Post.action",
          "User-Agent": "Smolder smoke test library",
          "Content-Type": "application/json"
        },
        "data": {
          "title": "Test",
          "body": "Lorem ipsum"
        }
      },
      "outcomes": {
        "expect_status_code": 302
      }
    },
    {
      "name": "Read posts",
      "uri": "/companyNews/Read.action",
      "inputs": {
        "headers": {
          "User-Agent": "Smolder smoke test library"
        }
      },
      "outcomes": {
        "expect_status_code": 200,
        "response_body_contains": "Lorem"
      }
    }
  ]
}
